<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add mobile_uid to partner form view -->
    <record id="view_partner_form_android_api" model="ir.ui.view">
        <field name="name">res.partner.form.android_api</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="vat" position="after">
                <field name="mobile_uid" readonly="1"/>
                <field name="mobile_sync_date"/>
            </field>
        </field>
    </record>

    <!-- Add mobile_uid to partner tree view -->
    <record id="view_partner_tree_android_api" model="ir.ui.view">
        <field name="name">res.partner.tree.android_api</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <field name="email" position="after">
                <field name="mobile_uid" optional="hide"/>
            </field>
        </field>
    </record>

    <!-- API Key Tree View -->
    <record id="view_android_api_key_tree" model="ir.ui.view">
        <field name="name">android.api.key.tree</field>
        <field name="model">android.api.key</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user_id"/>
                <field name="active"/>
                <field name="last_used"/>
            </tree>
        </field>
    </record>

    <!-- API Key Form View -->
    <record id="view_android_api_key_form" model="ir.ui.view">
        <field name="name">android.api.key.form</field>
        <field name="model">android.api.key</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="key" password="True"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="active"/>
                            <field name="last_used" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for API Keys -->
    <record id="action_android_api_key" model="ir.actions.act_window">
        <field name="name">API Keys</field>
        <field name="res_model">android.api.key</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_android_api_root"
        name="Android API"
        parent="base.menu_administration"
        sequence="100"/>

    <menuitem id="menu_android_api_keys"
        name="API Keys"
        parent="menu_android_api_root"
        action="action_android_api_key"/>
</odoo>
