<?xml version="1.0" encoding="utf-8"?>
<!--
    Network Security Configuration for Release builds.
    Enforces HTTPS for all connections to protect API keys and data.
-->
<network-security-config>
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
