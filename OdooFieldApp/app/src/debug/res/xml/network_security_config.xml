<?xml version="1.0" encoding="utf-8"?>
<!--
    Network Security Configuration for Debug builds.
    Allows cleartext (HTTP) only for localhost and emulator hosts for development.
    Production builds will use the main/res/xml version which enforces HTTPS.
-->
<network-security-config>
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>

    <!-- Allow cleartext for localhost (local development) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">localhost</domain>
        <domain includeSubdomains="false">127.0.0.1</domain>
        <!-- Android emulator host -->
        <domain includeSubdomains="false">10.0.2.2</domain>
        <!-- Genymotion emulator host -->
        <domain includeSubdomains="false">10.0.3.2</domain>
    </domain-config>
</network-security-config>
